{{#section 'css'}}
<link rel="stylesheet" href="/css/style-laptop.css" type="text/css">
{{/section}}

{{#section 'js'}}

{{/section}}

<form method="POST">
  <div class="form-group">
    <label for="">Mật khẩu cũ:</label>
    {{#if isFailPass}}
    <span class="text-danger">Nhập sai mật khẩu</span>
    {{/if}}

    <input type="password" class="form-control" name="oldpass" />
  </div>
  <div class="form-group">
    <label for="">Mật khẩu mới:</label>
    <input id="np1" type="password" class="form-control" name="newpass" />
  </div>
  <div class="form-group">
    <label for="">Xác nhận khẩu mới:</label>
    <input id="np2" type="password" class="form-control" />
  </div>

  <button id="btn-alert" type="submit" class="btn btn-danger mt-3">
    Cập nhật
  </button>
</form>