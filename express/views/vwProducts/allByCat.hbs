{{#section 'css'}}
<link rel="stylesheet" href="/css/style.css" type="text/css" />
{{/section}}

<div class=" shadow">

  <h4 class="card-header">
    {{Products}}
  </h4>
  {{#if this.empty}}
  <div class="card-body">
    <p class="card-test">
      Không có dữ liệu
    </p>
  </div>
  {{else}}
  <div class="card-body">
    <div class="row">
      {{#each this.products}}
      <div class="col-sm-4 mb-3">
        <div class="card" onclick="window.location('/products/detail/{{ProID}}')">
          <img src="/imgs/sp/{{ProID}}/{{ProID}}_0.jpg" alt="{{ProName}}" title="{{ProName}}" class="card-img-top">
          <div class="card-body">
            <h5 class="card-title mt-3">
              {{ProName}}
            </h5>
            <h5 class="card-title text-danger">Giá hiện tại: {{format Price}}đ</h5>
            <h5 class="card-title text-danger">Người giữ giá: {{mask WinerUserName}}</h5>
            <p id="{{ProID}}"></p>
            <p>Số lượt ra giá: {{NumberBid}}</p>
            {{#if MinutesAgo}}
            <p class="text-danger"> Sản phẩm vừa đăng trong 2 phút</p>
            {{/if}}
            <p class="card-text">
              {{TinyDes}}
            </p>

          </div>
          <div class="card-footer text-center">
            <a class="btn btn-sm btn-outline-primary" href="/products/detail/{{ProID}}" role="button">
              <i class="fa fa-eye" aria-hidden="true"></i>
              Details
            </a>
       
            <form method="POST" action="/products/addWishListOut">
              <input type="hidden" name="ProID" value="{{ProID}}">
              <button type="submit" class="btn btn-primary mt-2"> <i class="fas fa-heart"></i>   Add wish list</button>

            </form>
          </div>

        </div>

      </div>
      {{/each}}
    </div>
    <div class="row">
      <div class="col-sm-12">
        <nav>
          <ul class="pagination">
            <li class="page-item">
              <a class="page-link" href="?page={{prev_value}}">
                <i class="fa fa-backward" aria-hidden="true"></i>
              </a>
            </li>

            {{#each this.page_numbers}}
            {{#if isCurrentPage}}

            <li class="page-item active">
              <a class="page-link" href="javascript:;">{{value}} <span class="sr-only">(current)</span></a>
            </li>
            {{else}}
            <li class="page-item">
              <a class="page-link" href="?page={{value}}">{{value}}</a>
              {{isAuthenticated}}
            </li>

            {{/if}}
            {{/each}}


            <li class="page-item">
              <a class="page-link" href="?page={{next_value}}">
                <i class="fa fa-forward" aria-hidden="true"></i>
              </a>
            </li>
          </ul>
        </nav>
      </div>
    </div>
  </div>

  {{/if}}





</div>