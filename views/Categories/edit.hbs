<div class="card shadow mb-4">
    <h4 class="card-header">
        Category
    </h4>
    <div class="card-body">
        <form method="POST">
            <div class="form-group">
                <label for="textCatId">CatID</label>
                <input type="text" class="form-control" id="txtCatName" name="CatID" readonly
                    value="{{this.category.CatID}}">
            </div>
            <div class="form-group">
                <label for="textCatName">Category</label>
                <input type="text" class="form-control" id="txtCatName" name="CatName" placeholder="Enter category name"
                    autofocus value="{{this.category.CatName}}">
            </div>
            <a class="btn btn-primary" href="/admin/categories">
                <i class="fa fa-backward" aria-hidden="true"></i>
                List</a>
            <button type="submit" class="btn btn-primary" formaction="/admin/categories/patch">
                <i class="fa fa-check" aria-hidden="true"></i>
                Save
            </button>
            <button type="submit" class="btn btn-outline-danger" formaction="/admin/categories/del">
                <i class="fa fa-check" aria-hidden="true"></i>
                <i class="fa fa-trash-o" aria-hidden="true"></i>
                Delete
            </button>
        </form>
    </div>
    <div class="card-footer text-muted">
        Footer
    </div>
</div>