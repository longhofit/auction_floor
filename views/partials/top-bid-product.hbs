<html>
<div class="top-product">
    <div class="title">
        <h4>Top 5 sản phẩm có nhiều lượt ra giá nhất</h4>
    </div>
    <div class="">
        <p class="view-detail-text">Xem chi tiết</p>
    </div>
    <div class="row row-product">
        <div class="col-12">
            <div class="responsive">

                {{#each productData.topBidProductArr}}
                <div class="col-6 col-sm-4 col-md-3 col-lg-3 border hvr-glow ">
                    <div class="card-container" data-tilt>
                        <div class="card" id="item-1-card">
                            <div class="img-box">
                                <img src="{{this.imageSrc}}" alt="" />
                            </div>
                            <div class="content">
                                <p class="img-title">{{this.title}}</p>
                                <p class="imgTit cd"></p>
                                <p class="imgTit price">
                                    <i class="fa fa-gavel" aria-hidden="true">
                                        {{this.productPrice}}</i>
                                </p>
                                <p class="buy-now">
                                    Giá mua ngay: <span>{{this.currentPrice}}</span>
                                </p>
                            </div>
                        </div>
                    </div>
                </div>
                {{/each}}

            </div>
        </div>
    </div>
</div>

</html>